//python
import math
import bisect
#binary search

arr = eval(input("List: "))
e = int(input("Element: "))

arr.sort()#no return method that changes the actual array
arr = sorted(arr)#return a sorted array

l = 0
u = len(arr)-1
f = False

while l <= u:
    mid = math.floor(((l+u)/2))
    if arr[mid] == e:
        print("index = ",mid);
        f = True
        break;
    elif mid>e:
        u = mid-1
    else:
        l = mid+1

if f == False:
    print('element not found in array')

#using bisect
index = bisect.bisect_left(arr,e)
if index<len(arr) and arr[index] ==e:
    print("index: ", index)
else:
    print("element not found in array")


//java
import java.util.ArrayList;
import java.util.Collections;
import java.util.Scanner;
import java.util.List;
public class Main{
    public static void main(String[] args){
        //using inbuilt methods
        Scanner scn = new Scanner(System.in);
        ArrayList<Integer> arr = new ArrayList<Integer>(List.of(1,2,3,4,5));
        Collections.sort(arr);
        System.out.println("enter val: ");
        int val = scn.nextInt();
        int idx = Collections.binarySearch(arr,val);// for arrays  do Arrays.binarySeach(obj,int);
        if(idx>=0){
            System.out.println("Found at: "+idx);
        }
        else{
            System.out.println("not found");
        }

        //using standard methods
        int l = 0,u = arr.toArray().length-1,mid;
        boolean f = false;
        for(int i = 0;i<arr.toArray().length;i++){
             mid = (u+l)/2;
             if(arr.get(mid)>val){
                 u=mid-1;
             }
             else if(arr.get(mid)<val){
                 l = mid+1;
             }
            else{
                System.out.println("item found at: "+mid);
                f = true;
                break;
             }
        }
        if(f == false){
            System.out.println("element not found");
        }
    }
}



//cpp
#include<iostream>
#include<vector>
#include<algorithm>//for sort and binary search
using namespace::std;

int main(){
    vector<int> vtr = {2,3,1,20,5};
    sort(vtr.begin(), vtr.end());
    int v;cout<<"Value to search";cin>>v;

    //using inbuilt functions
    bool is = binary_search(vtr.begin(),vtr.end(),v);
    cout<<"element is present: "<<(bool)is<<endl;
    auto index = lower_bound(vtr.begin(),vtr.end(),v);
    if(index != vtr.end() && *index == v){
        cout<<"Index at: "<<(int)(vtr.end()- index)<<endl;
    }
    else{
        cout<<"not found"<<endl;
    }
    //using standard way
    int u = vtr.size(),l = 0;
    bool f = false;
    int mid;
    while(u>=l){
        int mid = (u+l)/2;
        if(vtr[mid]>v){
            u = mid-1;
        }
        else if(vtr[mid]<v){
            l =mid+1;
        }
        else{
            f = true;break;
        }
    }
    if(f == true){
      cout<<"index at: "<<mid<<endl;
    }
    else{
        cout<<"element not found";
    }
    return 0;
}
